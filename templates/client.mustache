	<body>
		<!-- FANCY SHADERS -->
		<script id="vertexShader" type="x-shader/x-vertex">

			varying vec2 vUv;

			void main()
			{
				vUv = uv;
				vec4 mvPosition = modelViewMatrix * vec4( position, 1.0 );
				gl_Position = projectionMatrix * mvPosition;
			}

		</script>

		<script id="fragmentShader" type="x-shader/x-fragment">

			uniform float time;

			varying vec2 vUv;

			void main(void) {

				vec2 p = - 1.0 + 2.0 * vUv;
				float a = time * 40.0;
				float d, e, f, g = 1.0 / 40.0 ,h ,i ,r ,q;

				e = 400.0 * ( p.x * 0.5 + 0.5 );
				f = 400.0 * ( p.y * 0.5 + 0.5 );
				i = 200.0 + sin( e * g + a / 150.0 ) * 20.0;
				d = 200.0 + cos( f * g / 2.0 ) * 18.0 + cos( e * g ) * 7.0;
				r = sqrt( pow( abs( i - e ), 2.0 ) + pow( abs( d - f ), 2.0 ) );
				q = f / r;
				e = ( r * cos( q ) ) - a / 2.0;
				f = ( r * sin( q ) ) - a / 2.0;
				d = sin( e * g ) * 176.0 + sin( e * g ) * 164.0 + r;
				h = ( ( f + d ) + a / 2.0 ) * g;
				i = cos( h + r * p.x / 1.3 ) * ( e + e + a ) + cos( q * g * 6.0 ) * ( r + h / 3.0 );
				h = sin( f * g ) * 144.0 - sin( e * g ) * 212.0 * p.x;
				h = ( h + ( f - e ) * q + sin( r - ( a + h ) / 7.0 ) * 10.0 + i / 4.0 ) * g;
				i += cos( h * 2.3 * sin( a / 350.0 - q ) ) * 184.0 * sin( q - ( r * 4.3 + a / 12.0 ) * g ) + tan( r * g + h ) * 184.0 * cos( r * g + h );
				i = mod( i / 5.6, 256.0 ) / 64.0;
				if ( i < 0.0 ) i += 4.0;
				if ( i >= 2.0 ) i = 4.0 - i;
				d = r / 350.0;
				d += sin( d * d * 8.0 ) * 0.52;
				f = ( sin( a * g ) + 1.0 ) / 2.0;
				gl_FragColor = vec4( vec3( f * i / 1.6, i / 2.0 + d / 13.0, i ) * d * p.x + vec3( i / 1.3 + d / 8.0, i / 2.0 + d / 18.0, i ) * d * ( 1.0 - p.x ), 1.0 );

			}

		</script>

		<!-- Actual document stuff -->
		<a href="/" id="title"><img src="images/logo.svg"><h1>Manzo's Marbles</h1></a>
		<header id="header">
			<div id="releaseMeta">
				<div id="releaseState">PRE-ALPHA ({{version}})</div>
				{{#gitHash}}<div id="releaseHash">{{gitHash}}</div>{{/gitHash}}
			</div>
			<nav id="externalLinks">
				<a href="https://github.com/Zemanzo/web-marbles" id="github" title="Contribute to the source!"><i class="icon-github-circled"></i></a>
				<a href="https://www.patreon.com/webmarbles" id="patreon" title="Support us on patreon!"><img src="images/patreon.svg" alt="Patreon"></a>
			</nav>
		</header>
		<section id="viewport">
			<div class="overlay">
				<div id="raceLeaderboard">
					<div class="header">
						Race results - <span class="mapName">Awesome Marble Track</span> <span class="author">by <span class="authorName">The One and Only</span></span>
					</div>
					<div id="results">
						<div class="header">
							<div class="rank">#</div>
							<div class="name">NAME</div>
							<div class="record">&nbsp;</div>
							<div class="time">TIME</div>
							<div class="timediff">DIFF</div>
							<div class="points">POINTS</div>
							<div class="pointstotal">TOTAL</div>
						</div>
						<div class="resultsEntry" id="resultsListTemplate">
							<div class="rank">0</div>
							<div class="name">Zemanzo</div>
							<div class="record">&nbsp;</div>
							<div class="time">DNF</div>
							<div class="timediff">-</div>
							<div class="points">-</div>
							<div class="pointstotal">-</div>
						</div>
						<div id="resultsList">
						</div>
					</div>
				</div>

				{{#client_id}}
				<div id="chat">
					<iframe src="/chat" frameborder="0"></iframe>
				</div>
				{{/client_id}}
				<div id="notifications">
					<div id="notification-template" class="notification">
						<div class="notification-content">The maximum amount of marbles has been reached! No more marbles can be entered.</div>
					</div>
				</div>
			</div>
		</section>
		<section id="sidebar">
			<div id="gameState">
				<h2 id="state">...</h2>
			</div>
			<div id="timer" class="themeNumber">
				...
			</div>
			<div id="menu">
				<div id="menuOptions">
					<div class="selected"><i class="icon-users"></i></div>
					<!--<div><i class="icon-cog"></i></div>--> <!-- To be added... -->
				</div>
				<div id="menuContent">
					<div id="gameInfo" class="hidden">
						<div>
							<h2>
								Marbles - <span id="entries" class="themeNumber">0</span> entries
							</h2>
						</div>
						<div id="marbleList">
							<div class="marbleListEntry" id="marbleListTemplate">
								<span class="rank">#</span>
								<span class="color">&nbsp;</span>
								<span class="name">Zemanzo</span>
								<span class="time">...</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</body>
</html>
